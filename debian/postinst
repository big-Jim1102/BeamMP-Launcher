#!/bin/sh
set -e

# Create symlink beammp-launcher -> BeamMP-Launcher for easier access
if [ -f /usr/bin/BeamMP-Launcher ] && [ ! -e /usr/bin/beammp-launcher ]; then
    ln -s BeamMP-Launcher /usr/bin/beammp-launcher || true
fi

# Update desktop database
if command -v update-desktop-database >/dev/null 2>&1; then
    update-desktop-database -q || true
fi

# Update icon cache (if we add icons later)
if command -v update-icon-caches >/dev/null 2>&1; then
    update-icon-caches /usr/share/icons/hicolor || true
fi

exit 0

